{
  "name": "nomino",
  "version": "1.1.0",
  "description": "Cross-platform desktop application for bulk folder renaming, file copying, and PDF date replacement with Azerbaijani alphabet support",
  "keywords": [
    "folder-renaming",
    "file-copying",
    "pdf-date-replacement",
    "bulk-operations",
    "excel-integration",
    "azerbaijani-alphabet",
    "tauri",
    "desktop-app"
  ],
  "author": {
    "name": "ClauseBreaker",
    "url": "https://github.com/ClauseBreaker"
  },
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "type": "module",
  "main": "src-tauri/src/main.rs",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "icons:generate": "node scripts/generate-icons.js",
    "clean": "rm -rf .svelte-kit build dist node_modules/.vite",
    "clean:all": "npm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0",
    "lucide-svelte": "^0.294.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tauri-apps/cli": "^1.5.0",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.34.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ClauseBreaker/nomino.git"
  },
  "bugs": {
    "url": "https://github.com/ClauseBreaker/nomino/issues"
  },
  "homepage": "https://github.com/ClauseBreaker/nomino#readme"
}
